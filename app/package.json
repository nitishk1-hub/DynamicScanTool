{
    "name": "chrome-monitor",
    "version": "1.0.0",
    "description": "Chrome Extension Security Analyzer",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:linux": "electron-builder --linux"
    },
    "dependencies": {
        "express": "^4.18.2",
        "puppeteer-core": "^21.6.1",
        "ws": "^8.14.2",
        "adm-zip": "^0.5.10",
        "uuid": "^9.0.0",
        "better-sqlite3": "^9.2.2"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.chromemonitor.app",
        "productName": "Chrome Monitor",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/**"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png"
        }
    }
}